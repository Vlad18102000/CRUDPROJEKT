@model List<Projekt.Context.Student>

@{
    ViewBag.Title = "StudentList";
}

<style>
    .table-hover{
        margin-top:40px;
    }
</style>
<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>First Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.Name</td>
        <td>@item.First_Name</td>
        <td>@item.Email</td>
        <td>@item.Mobile</td>
        <td>@item.Description</td>
        <td>
            <a href="@Url.Action("Student", new { item.ID,item.Name,item.First_Name,item.Email,item.Mobile,item.Description})" class="btn btn-success" >Edit</a>
            <a href="@Url.Action("Delete",new { item.ID})" class="btn btn-danger" >Delete</a>
        </td>
    </tr>
    }

</table>

